# AWS Batch container for FMF worker
FROM python:3.12-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /app
COPY . /app

RUN pip install --no-cache-dir --upgrade pip \
    && pip install .[aws,redshift,delta,excel]

# Entrypoint: use the FMF CLI; override args per job definition
ENTRYPOINT ["fmf"]

